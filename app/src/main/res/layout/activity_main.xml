<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/countdownTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9 Haziran 2024 YDS Sınavına:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/countdownValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 gün 0 saat 0 dakika"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_below="@id/countdownTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/soruDagilimiButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Soru Dağılımı"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:layout_below="@id/countdownValueTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="soruDagilimiClick"/>

    <Button
        android:id="@+id/grammerCozumuButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Grammar Soru Çözümü"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:layout_below="@id/soruDagilimiButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="grammerCozumuClick"/>

    <Button
        android:id="@+id/kelimeDefteriButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kelime Defterim"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:layout_below="@id/grammerCozumuButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="kelimeDefteriClick"/>

</RelativeLayout>
